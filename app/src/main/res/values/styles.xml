<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="general_notitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorAccent">#757575</item>
        <item name="colorSecondary">#E8E8E8</item>
    </style>
    <style name="auth_welcome">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">37sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="auth_secondary">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="name">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:layout_marginLeft">30sp</item>
    </style>
    <style name="edit_text_primary">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">13sp</item>
    </style>
    <style name="edit_text_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:padding">13sp</item>
    </style>
    <style name="edit_text_border_primary">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text_border</item>
        <item name="android:padding">13sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
    </style>
    <style name="bold_accent">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="bold_primary">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="button_primary">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
    </style>
    <style name="button_accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text_darken</item>
        <item name="android:padding">13sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="post">
        <item name="android:padding">13sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:background">@drawable/shape_post</item>
    </style>
    <style name="post_title_text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">1sp</item>
    </style>
    <style name="post_body_text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">1sp</item>
    </style>
    <style name="post_tags_text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">1sp</item>
    </style>
    <style name="small_icon">
        <item name="android:layout_width">13sp</item>
        <item name="android:layout_height">13sp</item>
    </style>
    <style name="post_fragment_title_text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:padding">1sp</item>
    </style>
    <style name="post_fragment_body_text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="fontStyle">normal</item>
        <item name="android:padding">1sp</item>
    </style>
    <style name="post_fragment">
        <item name="android:padding">13sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:background">@drawable/shape_post_fragment</item>
    </style>
    <style name="comment">
        <item name="android:padding">13sp</item>
        <item name="android:background">@drawable/shape_comment</item>
        <item name="background">@drawable/shape_post</item>
    </style>
    <style name="comment_element">
        <item name="android:padding">13sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
    </style>
    <style name="comment_username">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="comment_body">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="comment_date">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
    </style>
    <style name="text">
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="fontStyle">normal</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:padding">13sp</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">30sp</item>
    </style>
</resources>